{
  "$id": "https://solaris-france.org/nono#",
  "type": "object",
  "$comment": "automatically generated for NonoSolaris",
  "$defs": {
    "Cell": {
      "type": "object",
      "required": [
        "cell_id"
      ],
      "properties": {
        "cell_id": {
          "type": "string"
        },
        "cell_dir": {
          "type": "path",
          "default": "."
        },
        "build_dir": {
          "type": "path",
          "default": "{{ this.cell_dir }}/build"
        },
        "member_dir": {
          "type": "path",
          "default": "{{ this.cell_dir }}/fiches"
        },
        "members": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/personas/$defs/Member"
          }
        },
        "admins": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/personas/$defs/Administrator"
          }
        },
        "coordinators": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/personas/$defs/Coordinator"
          }
        },
        "email": {
          "type": "string",
          "default": "{{this.cell_id|lower|replace(' ','')}}@protonmail.com"
        },
        "telegram_channel": {
          "type": "string",
          "default": "@solaris_{{this.cell_id|lower|replace(' ','_')}}"
        },
        "telegram_groups": {
          "type": "string"
        }
      }
    },
    "RegionCell": {
      "type": "object",
      "extends": [
        "#/$defs/Cell"
      ],
      "properties": {
        "cells": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Cell"
          }
        }
      }
    },
    "NationCell": {
      "type": "object",
      "extends": [
        "#/$defs/RegionCell"
      ],
      "properties": {
        "cells": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/RegionCell"
          }
        }
      }
    },
    "AddressBook": {
      "type": "object",
      "required": [
        "cell"
      ],
      "properties": {
        "cell": {
          "$ref": "#/$defs/Cell"
        },
        "edition": {
          "type": "string",
          "default": "{{today.isoformat()}}"
        },
        "edition_fmt": {
          "type": "string",
          "default": "{{this.edition}}"
        },
        "build_ed_dir": {
          "type": "path",
          "default": "{{ this.cell.build_dir }}/{{this.edition}}"
        },
        "edition_fp": {
          "type": "path",
          "default": "{{ this.build_ed_dir }}/annuaire-solaris-{{this.cell.cell_id}}-{{this.edition}}.pdf"
        },
        "pages_dir": {
          "type": "path",
          "default": "{{ this.build_ed_dir }}/pages"
        },
        "index_fp": {
          "type": "path",
          "default": "{{ this.build_ed_dir }}/index.pdf"
        },
        "forms_updated_dir": {
          "type": "path",
          "default": "{{ this.build_ed_dir }}/forms"
        }
      }
    },
    "personas": {
      "type": "object",
      "$defs": {
        "Member": {
          "type": "object",
          "properties": {
            "last_name": {
              "type": "string"
            },
            "first_name": {
              "type": "string"
            },
            "male_check": {
              "type": "boolean"
            },
            "female_check": {
              "type": "boolean"
            },
            "gender": {
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "birth_year": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "telegram_id": {
              "type": "string"
            },
            "last_name_upper": {
              "type": "string"
            },
            "city_upper": {
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "index_entry": {
              "type": "string"
            },
            "index_city_entry": {
              "type": "string"
            },
            "email_link": {
              "type": "string"
            },
            "telegram_id_link": {
              "type": "string"
            },
            "page_filename": {
              "type": "string"
            },
            "form_orig_filepath": {
              "type": "string"
            },
            "form_updated_filepath": {
              "type": "string"
            }
          }
        },
        "Coordinator": {
          "type": "object",
          "extends": [
            "#/$defs/personas/$defs/Member"
          ]
        },
        "Administrator": {
          "type": "object",
          "extends": [
            "#/$defs/personas/$defs/Member"
          ]
        }
      }
    }
  }
}
